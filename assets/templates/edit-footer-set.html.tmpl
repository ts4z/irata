<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>{{ if .IsNew }}Create{{ else }}Edit{{ end }} Footer Plug Set</title>
    <link rel="stylesheet" href="/fs/irata-style.css">
    <script>
      function addPlug() {
        const plugsDiv = document.getElementById('plugs');
        const idx = plugsDiv.children.length;
        const row = document.createElement('div');
        row.className = 'plug-row';
        row.innerHTML = `<textarea name="Plug${idx}" required></textarea> <button type="button" class="delete-btn" onclick="this.parentNode.remove()">Delete</button>`;
        plugsDiv.appendChild(row);
      }
    </script>
</head>
<body>
    <div class="container">
        <div class="admin-bar">
            <a href="/manage/footer-set/">&lt; Back to Footer Sets</a>
        </div>

        <h1>{{ if .IsNew }}Create{{ else }}Edit{{ end }} Footer Plug Set</h1>
        <form method="POST">
            <div class="form-group">
                <label for="Name">Set Name</label>
                <input type="text" id="Name" name="Name" value="{{ .FooterSet.Name }}" required>
            </div>

            <div class="form-group">
                <label>Footer Plugs</label>
                <div id="plugs">
                    {{ range $i, $plug := .FooterSet.TextPlugs }}
                    <div class="plug-row">
                        <textarea name="Plug{{ $i }}" required>{{ $plug }}</textarea>
                        <button type="button" class="delete-btn" onclick="this.parentNode.remove()">Delete</button>
                    </div>
                    {{ end }}
                </div>
                <button type="button" id="add-plug-btn" onclick="addPlug()">Add Plug</button>
            </div>

            <div class="actions">
                <button type="submit">{{ if .IsNew }}Create{{ else }}Save{{ end }}</button>
                <a href="/manage/footer-set/">Cancel</a>
            </div>
            
            {{ if .Flash }}<div class="flash">{{ .Flash }}</div>{{ end }}
        </form>
    </div>
</body>
</html>
