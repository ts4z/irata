<!-- edit tournament settings -->
<html>
  <head>
    <title>
      Irata Poker Clock
    </title>
  </head>
  <body>
    <style>
      @font-face {
        font-family: arcade;
        src: url('/fs/PressStart2P-vaV7.ttf') format('truetype');
      }
      body {
        font-family: arcade, monospace;
        background-color: #000000;
        color: #ffffff;
      }
      td {
        vertical-align: top;
        border-spacing : 100vi;
      }
      input {
        font-family: arcade, monospace;
      }
      table {
        border-spacing: 5px 1rem;
      }
    </style>

    <h1> IRATA POKER CLOCK </h1>

    {{ if .IsAdmin }}
    <table width="100%">
    <th> &#9830; Admin &#9830; </th>
    <td> Create: [<a href="/t/create">Tournament</a>] </td>
    <td> Manage: [<a href="/manage/site">Site</a>] [<a href="/manage/footers/">Footer Plugs</a>] [<a href="/manage/structures/">Structures</a>] </td>
    <td> &#9830;&#9830; [<a href="/logout">LOGOUT</a>]
    </tr>
    </table>
    <hr>
    {{ end }}

    <table>
        {{ $n := 0 }}
        {{range $i, $t := .Overview.Slugs}}
        {{ with $t }}
        <tr>
            <td> * </td> 
            {{ if $.IsAdmin }}
            <td> [<a href="/t/{{.TournamentID}}/edit">edit</a>]
                [<a href="#" onclick="document.getElementById('really-{{$i}}').style.display='inline'; return false;">delete</a><span style="display: none;" id="really-{{$i}}"> ...really? <a href="/t/{{.TournamentID}}/delete">yes</a>
                   <a href="#" onclick="document.getElementById('really-{{$i}}').style.display='none'; return false;">no</a></span>]
            </td>
            {{ end }}
            <td> 
              <a href="/t/{{.TournamentID}}"><em>{{ .TournamentName }}</em></a> {{ .Description }}</td>
        </tr>
        {{ end }}
        {{ end }}
    </table>

    <hr>

    {{ if not .IsAdmin }}
    <p>
    [<a href="/login">LOGIN</a>] to manage tournaments and other data.
    </p>
    {{ end }}

  </body>
</html>
