{{ define "manage-footer-sets.html.tmpl" }}
<!DOCTYPE html>
<html>
<head>
    <title>Manage Footer Plug Sets</title>
    <style>
      @font-face {
          font-family: arcade;
          src: url('/fs/PressStart2P-vaV7.ttf') format('truetype');
      }
      body {
          font-family: arcade, monospace;
          background-color: #000000;
          color: #ffffff;
          line-height: 1.7;
      }
      .container {
          max-width: 50vw;
          margin: 2em auto;
          background: #111;
          padding: 2em;
          border-radius: 8px;
      }
      h1 {
          margin-bottom: 1em;
      }
      table {
          width: 100%;
          border-collapse: collapse;
          margin-bottom: 2em;
      }
      th, td {
          padding: 0.5em;
          border-bottom: 1px solid #333;
          text-align: left;
      }
      th {
          background: #222;
      }
      tr:hover {
          background: #222;
      }
      a {
          color: #fff;
          text-decoration: underline;
      }
    </style>
</head>
<body>
    <div class="container">
        <h1>Manage Footer Plug Sets</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Version</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{ range .FooterSets }}
                <tr>
                    <td>{{ .Name }}</td>
                    <td>{{ .Version }}</td>
                    <td>
                        <a href="/manage/footer-set/{{ .FooterPlugsID }}/edit">Edit</a>
                        <a href="#" style="color:#f88;" onclick="showDeleteModal({{-  .FooterPlugsID -}})">Delete</a>
                    </td>
                </tr>
                {{ else }}
                <tr><td colspan="3">No footer plug sets found.</td></tr>
                {{ end }}
            </tbody>
        </table>

        <a href="/create/footer-set">Create New Footer Plug Set</a> <br>
        <a href="/">Back to Overview</a>
    </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteModal" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.7); z-index:1000;">
            <div style="background:#222; color:#fff; padding:2em; border-radius:8px; max-width:400px; margin:10vh auto; position:relative;">
                <h2>Delete Footer Plug Set</h2>
                <p id="deleteModalText"></p>
                <form id="deleteForm" method="POST" action="">
                    <button type="submit" style="background:#f88; color:#fff; border:none; padding:0.5em 1em; border-radius:4px;">Confirm Delete</button>
                    <button type="button" onclick="hideDeleteModal()" style="margin-left:1em;">Cancel</button>
                </form>
            </div>
        </div>
        <script>
            function showDeleteModal(id) {
                document.getElementById('deleteModalText').textContent = `Are you sure you want to delete the set ${id}?`;
                document.getElementById('deleteForm').action = `/manage/footer-set/${id}/delete`;
                document.getElementById('deleteModal').style.display = 'block';
            }
            function hideDeleteModal() {
                document.getElementById('deleteModal').style.display = 'none';
            }
        </script>
</body>
</html>
{{ end }}
